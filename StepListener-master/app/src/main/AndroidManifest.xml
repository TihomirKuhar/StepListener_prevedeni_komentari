<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.steplistener">
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /><!-- registering a forground service since it requires permission to be run -->
    <application
        android:name=".Notifications"
        android:allowBackup="true"
        android:icon="@drawable/baseline_directions_run_black_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baseline_directions_run_black_48"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>